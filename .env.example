# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/motd_db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# WhatsApp Cloud API
WHATSAPP_API_TOKEN=your-whatsapp-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_API_VERSION=v18.0
WHATSAPP_API_URL=https://graph.facebook.com

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@mealoftheday.com
FROM_NAME=Meal of the Day

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Scheduler Configuration
REMINDER_TIME=10:00
RESTAURANT_SUMMARY_TIME=11:00
REMINDER_DAYS_AHEAD=1,2,3
SCHEDULER_ENABLED=true

# Task trigger (for Cloud Scheduler / cron-style execution)
# If unset, /api/tasks/run is disabled. When set, send header X-Task-Token: <value>
TASK_TRIGGER_TOKEN=

# Docker/production helpers
RUN_MIGRATIONS=1
WAIT_FOR_DB=1

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Uploads (for menu item images)
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=5242880
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log
